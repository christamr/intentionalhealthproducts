/* --- GLOBAL STYLES --- */

html {
  font-size: 16px;
}

body {
  margin: 0px;
  padding: 0px;
  font-size: 62.5%; /*1em = 10px*/
}

h1 {
  font-family: "droid-serif", serif;
  font-size: 8.75em;
  font-style: italic;
  color: #544f45;
  line-height: 1em;
  margin: 0px;
  font-weight: lighter;
}

h2 {
  font-family: "droid-serif", serif;
  font-size: 5em;
  color: #5E6900;
  font-weight: lighter;
  margin: 0px;
}

h3 {
  font-family: "droid-serif", serif;
  font-size: 3.5em;
  font-style: italic;
  color: #544f45;
  font-weight: lighter;
  margin: 0px;
}

h4 {
  font-family: "Droid-Sans", sans-serif;
  font-size: 2.25em;
  font-weight: lighter;
  margin: 0px;
  color: #544F45;
  text-decoration: underline;
}

p {
  font-family: "droid-serif", serif;
  font-size: 2em;
  line-height: 1.5em;
  color: #544f45;
}

ul, ol {
  font-family: "droid-serif", serif;
  font-size: 2em;
  line-height: 1.5em;
  color: #544f45;
}

a:link {
  background: #f1eed7;
  text-decoration: none;
  color: #544f45;
}

a:visited {
  background: #f1eed7;
  text-decoration: none;
  color: #544f45;
}

a:hover {
  background: #F3DCAC; 
}

.heading-centered {
  text-align: center;
}

h2.section-heading {
  font-family: "droid-serif", serif;
  font-size: 2.5em;
  font-style: italic;
  color: #544f45;
  font-weight: lighter;
  margin: 0px;
  text-align: center;
}

p.full-width-copy {
  font-family: "droid-serif", serif;
  font-size: 2.5em;
  color: #544f45;
  line-height: 1.5em;
  text-align: center;
}

