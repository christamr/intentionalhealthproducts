body {
  margin: 0px;
  padding: 0px;
}

h1 {
  font-family: "droid-serif", serif;
  font-size: 6em;
  font-style: italic;
  color: #544f45;
  line-height: 1em;
}

h2 {
  font-family: "droid-serif", serif;
  font-size: 1.5em;
  font-style: italic;
  color: #544f45;
}

p {
  font-family: "droid-serif", serif;
  font-size: 2em;
  line-height: 1.35em;
  color: #544f45;
}

.width-wrapper {
  width: 70%;
  max-width: 1000px;
  margin-right: 14%;
  margin-left: 15%;
}

section.toolbar {
  background-color: #2c1f06;
  margin: 0px;
  height: 60px;
  color: #fdfdf7;
}

.toolbar ul {
  float: right;
}

.toolbar li {
  display: inline-block;
  margin-left: 5px;
  padding-top: 5px;
}

.toolbar li a:link {
  color: #fdfdf7;
  text-decoration: none;
  font-family: "Droid-Sans", sans-serif;
  border: 1px solid #7c776d;
  border-radius: 4px;
  padding: 8px 20px 8px 20px;
}

.toolbar li a:visited {
  color: #fdfdf7;
  text-decoration: none;
  font-family: "Droid-Sans", sans-serif;
  border: 1px solid #7c776d;
  border-radius: 4px;
  padding: 8px 20px 8px 20px;
}

.toolbar li a:hover {
  color: #2c1f06;
  background-color: #fdfdf7;
  text-decoration: none;
  font-family: "Droid-Sans", sans-serif;
  border: 1px solid #fdfdf7;
  border-radius: 4px;
  padding: 8px 20px 8px 20px;
}

nav {
  background-color: #544f45;
  height: 80px;
}

nav ul {
  float: right;
  vertical-align: center;
  padding-top: 15px;
}

nav li {
  display: inline-block;
  margin-left: 30px;
}

nav li a:link {
  color: #f1eed7;
  text-decoration: none;
  font-family: "Droid-Sans", sans-serif;
  font-size: 1em;
  text-transform: uppercase;
}

nav li a:visited {
  color: #f1eed7;
  text-decoration: none;
  font-family: "Droid-Sans", sans-serif;
  font-size: 1em;
  text-transform: uppercase;
}

nav li a:hover {
  color: #f1eed7;
  text-decoration: none;
  font-family: "Droid-Sans", sans-serif;
  font-size: 1em;
  text-transform: uppercase;
  padding-bottom: 5px;
  border-bottom: 2px solid #f1eed7;
}



