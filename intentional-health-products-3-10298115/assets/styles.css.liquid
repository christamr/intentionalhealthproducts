body {
  margin: 0px;
  padding: 0px;
}

h1 {
  font-family: "droid-serif", serif;
  font-size: 6em;
  font-style: italic;
  color: #544f45;
  line-height: 1em;
  margin: 0px;
  text-align: center;
  font-weight: lighter;
}

h2 {
  font-family: "droid-serif", serif;
  font-size: 1.75em;
  font-style: italic;
  color: #544f45;
  font-weight: lighter;
  margin: 0px;
}

h3 {
  font-family: "droid-serif", serif;
  font-size: 2em;
  color: #544f45;
  font-weight: lighter;
  margin: 0px;
}

h4 {
  font-family: "Droid-Sans", sans-serif;
  font-size: 1.5em;
  font-weight: lighter;
  margin: 0px;
}

p {
  font-family: "droid-serif", serif;
  font-size: 2em;
  line-height: 1.35em;
  color: #544f45;
}

.width-wrapper {
  width: 70%;
  max-width: 1000px;
  margin-right: 14%;
  margin-left: 15%;
}

.btn:link {
  font-family: "Droid-Sans", sans-serif;
  text-transform: uppercase;
  font-size: 1.25em;
  text-decoration: none;
  color: #6a7614;
  border: 2px solid #6a7614;
  border-radius: 4px;
  padding: 20px 40px 20px 40px;
}

.btn:visited {
  font-family: "Droid-Sans", sans-serif;
  text-transform: uppercase;
  font-size: 1.25em;
  text-decoration: none;
  color: #6a7614;
  border: 2px solid #6a7614;
  border-radius: 4px;
  padding: 20px 40px 20px 40px;
}

.btn:hover {
  font-family: "Droid-Sans", sans-serif;
  text-transform: uppercase;
  font-size: 1.25em;
  text-decoration: none;
  color: #fdfdf7;
  background-color: #6a7614;
  border: 2px solid #6a7614;
  border-radius: 4px;
  padding: 20px 40px 20px 40px;
}

section.toolbar {
  background-color: #2c1f06;
  margin: 0px;
  height: 60px;
  color: #fdfdf7;
}

.toolbar ul {
  float: right;
}

.toolbar li {
  display: inline-block;
  margin-left: 5px;
  padding-top: 5px;
}

.toolbar li a:link {
  color: #fdfdf7;
  text-decoration: none;
  font-family: "Droid-Sans", sans-serif;
  border: 1px solid #7c776d;
  border-radius: 4px;
  padding: 8px 20px 8px 20px;
}

.toolbar li a:visited {
  color: #fdfdf7;
  text-decoration: none;
  font-family: "Droid-Sans", sans-serif;
  border: 1px solid #7c776d;
  border-radius: 4px;
  padding: 8px 20px 8px 20px;
}

.toolbar li a:hover {
  color: #2c1f06;
  background-color: #fdfdf7;
  text-decoration: none;
  font-family: "Droid-Sans", sans-serif;
  border: 1px solid #fdfdf7;
  border-radius: 4px;
  padding: 8px 20px 8px 20px;
}

nav {
  background-color: #544f45;
  height: 80px;
}

nav ul {
  float: right;
  vertical-align: center;
  padding-top: 15px;
}

nav li {
  display: inline-block;
  margin-left: 30px;
}

nav li a:link {
  color: #f1eed7;
  text-decoration: none;
  font-family: "Droid-Sans", sans-serif;
  font-size: 1em;
  text-transform: uppercase;
}

nav li a:visited {
  color: #f1eed7;
  text-decoration: none;
  font-family: "Droid-Sans", sans-serif;
  font-size: 1em;
  text-transform: uppercase;
}

nav li a:hover {
  color: #f1eed7;
  text-decoration: none;
  font-family: "Droid-Sans", sans-serif;
  font-size: 1em;
  text-transform: uppercase;
  padding-bottom: 5px;
  border-bottom: 2px solid #f1eed7;
}

header {
  background: url('home-background.png');
  background-repeat: no-repeat;
  height: 575px;
}

.hero-home-copy {
  padding-top: 150px;
  font-style: none;
}

.hero-copy-color {
  color: #727e15;
}

header img {
  float: right;
  margin-top: -100px;
  margin-bottom: 25px;
}

.cta-home {
  background: url('cta-background-v2.png');
  height: 315px;
  text-align: center;
}

.cta-home h2 {
  color: #f1eed7;
  text-align: center;
  padding-top: 75px;
  font-weight: lighter;
}

.cta-home p {
  color: #f1eed7;
}

.cta-home span.or {
  font-style: italic;
  padding: 0 25px 0 25px;
}

.cta-home img {
  text-align: center;
  padding-bottom: 10px;
}

.cta-home a:link {
  font-size: 1.75em;
  color: #f1eed7;
  text-decoration: none;
}

.cta-home a:visited {
  font-size: 1.75em;
  color: #f1eed7;
  text-decoration: none;
}

.cta-home .go-shop, .cta-home .services {
  display: inline-block;
  height: 139px;
  line-height: 130px;
}

.cta-home .go-shop, .cta-home .services, .cta-home .or {
  position: relative;
  top: -35px;
}

.go-shop:hover {
  background: url('shopping-rollover.png') 46px no-repeat;
}

.services:hover {
  background: url('services-rollover.png') 150px no-repeat;
}

.intro-home {
  text-align: center;
  padding-top: 75px;
  font-weight: lighter;
}

.intro-home img {
  padding-bottom: 40px;
}

.intro-home .btn {
  display: inline-block;
  margin-top: 15px;
  margin-bottom: 65px;
}

footer {
  background-color: #544f45;
  font-family: "Droid-Sans", sans-serif;
  font-weight: 400;
  color: #f1eed7;
}

footer .km-signoff {
  background-color: #2c1f06;
  padding-top: 10px;
  padding-bottom: 10px;
}

footer .km-signoff p {
  font-family: "Droid-Sans", sans-serif;
  font-weight: 400;
  color: #f1eed7;
  font-size: 1em;
  text-align: center;
}

footer .km-signoff a:link {
  color: #f1eed7;
  text-decoration: underline;
}

footer .km-signoff a:visited; {
  color: #f1eed7;
  text-decoration: underline;
}

footer .km-signoff a:hover; {
  color: #6c7814;
  text-decoration: underline;
}


