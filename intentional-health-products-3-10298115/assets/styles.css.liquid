.width-wrapper {
  width: 70%;
  max-width: 1000px;
  margin-right: auto;
  margin-left: auto;
}

/*--- TOOLBAR AND NAVIGATION ---*/

section.toolbar {
  background-color: #3a3429;
  margin: 0px;
  height: 50px;
  color: #fdfdf7;
}

.toolbar ul {
  float: right;
  margin: 10px 0 0 0;
}

.toolbar li {
  display: inline-block;
  margin-left: 10px;
}

nav.main {
  background-color: #544f45;
  height: 65px;
}

nav.main ul {
  float: right;
  vertical-align: center;
}

nav.main li {
  display: inline-block;
  margin-left: 30px;
}

nav.main li a:link {
  color: #f1eed7;
  font-size: .75em;
  text-decoration: none;
  font-family: "Droid-Sans", sans-serif;
  text-transform: uppercase;
  background: none;
}

nav.main  li a:visited {
  color: #f1eed7;
  font-size: .75em;
  text-decoration: none;
  font-family: "Droid-Sans", sans-serif;
  text-transform: uppercase;
  background: none;
}

nav.main  li a:hover {
  color: #f1eed7;
  font-size: .75em;
  text-decoration: none;
  font-family: "Droid-Sans", sans-serif;
  text-transform: uppercase;
  padding-bottom: 5px;
  border-bottom: 2px solid #f1eed7;
  background: none;
}

nav.main .logo {
  position: relative;
  top: -40px;
  background: none;
}

