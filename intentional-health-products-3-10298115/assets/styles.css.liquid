/* --- GLOBAL STYLES --- */

html {
  font-size: 16px;
}

body {
  margin: 0px;
  padding: 0px;
  font-size: 62.5%; /*1em = 10px*/
}

.width-wrapper {
  width: 70%;
  max-width: 1000px;
  margin-right: auto;
  margin-left: auto;
}

h1 {
  font-family: "droid-serif", serif;
  font-size: 8.75em;
  font-style: italic;
  color: #544f45;
  line-height: 1em;
  margin: 0px;
  font-weight: lighter;
}

h2 {
  font-family: "droid-serif", serif;
  font-size: 5em;
  color: #5E6900;
  font-weight: lighter;
  margin: 0px;
}

h3 {
  font-family: "droid-serif", serif;
  font-size: 3.5em;
  font-style: italic;
  color: #544f45;
  font-weight: lighter;
  margin: 0px;
}

h4 {
  font-family: "Droid-Sans", sans-serif;
  font-size: 2.25em;
  font-weight: lighter;
  margin: 0px;
  color: #544F45;
  text-decoration: underline;
}

p {
  font-family: "droid-serif", serif;
  font-size: 2em;
  line-height: 1.5em;
  color: #544f45;
}

ul, ol {
  font-family: "droid-serif", serif;
  font-size: 2em;
  line-height: 1.5em;
  color: #544f45;
}

a:link {
  background-color: #f1eed7;
  text-decoration: none;
  color: #544f45;
}

a:visited {
  background-color: #f1eed7;
  text-decoration: none;
  color: #544f45;
}

a:hover {
  background-color: #F3DCAC; 
}

.heading-centered {
  text-align: center;
}

h2.section-heading {
  font-family: "droid-serif", serif;
  font-size: 2.5em;
  font-style: italic;
  color: #544f45;
  font-weight: lighter;
  margin: 0px;
  text-align: center;
}

p.full-width-copy {
  font-family: "droid-serif", serif;
  font-size: 2.5em;
  color: #544f45;
  line-height: 1.5em;
  text-align: center;
}

.button-large:link {
  cursor: pointer;
  font-family: "Droid-Sans", sans-serif;
  text-transform: uppercase;
  font-size: 1.75em;
  text-decoration: none;
  border-radius: 45px;
  padding: 15px 25px 12px 25px;
  background-color: #FCFDF7;
  border: 2px solid #5E6900;
  color: #5E6900;
  display: inline-block;
}

.button-large:visited {
  cursor: pointer;
  font-family: "Droid-Sans", sans-serif;
  text-transform: uppercase;
  font-size: 1.75em;
  text-decoration: none;
  border-radius: 45px;
  padding: 15px 25px 12px 25px;
  background-color: #FCFDF7;
  border: 2px solid #5E6900;
  color: #5E6900;
}

.button-large:hover {
  cursor: pointer;
  font-family: "Droid-Sans", sans-serif;
  text-transform: uppercase;
  font-size: 1.75em;
  text-decoration: none;
  border-radius: 45px;
  padding: 15px 25px 12px 25px;
  background-color: #5E6900;
  color: #FCFDF7;
}

/*--- CTA SECTION STYLES ---*/
 
.cta-section {
  background: url('cta-background-v2.jpg');
  height: 335px;
  text-align: center;
  border-top-width: 1px;
  border-top-style: ridge;
  border-top-color: #3A3429;
}

.cta-section h2.section-heading {
  color: #f1eed7;
  text-align: center;
  padding-top: 75px;
  font-weight: lighter;
}

.cta-section p {
  color: #f1eed7;
  background-color: none;
}

.cta-section span.or {
  font-style: italic;
  padding: 0 25px 0 25px;
}

.cta-section img {
  text-align: center;
  padding-bottom: 30px;
  width: 35%;
  max-width: 350px;
}

.cta-section a:link {
  font-size: 1.75em;
  color: #f1eed7;
  text-decoration: none;
  background-color: none;
}

.cta-section a:visited {
  font-size: 1.75em;
  color: #f1eed7;
  text-decoration: none;
  background-color: none;
}

.cta-section .go-shop, .cta-section .services, .cta-section .cta-hover-centered {
  display: inline-block;
  height: 139px;
  line-height: 130px;
  background-color: none;
}

.cta-section .go-shop, .cta-section .services, .cta-section .cta-hover-centered, .cta-section .or {
  position: relative;
  top: -35px;
}

.go-shop:hover {
  background: url('shopping-rollover.png') 46px no-repeat;
  text-shadow: 2px 2px 5px rgb(50,50,10);
  cursor: pointer;
  background-color: none;
}

.services:hover {
  background: url('services-rollover.png') 150px no-repeat;
  text-shadow: 2px 2px 5px rgb(50,50,10);
  background-color: none;
}

.cta-hover-centered:hover {
  background: url('centered-rollover.png') center no-repeat;
  text-shadow: 2px 2px 5px rgb(50,50,10);
  background-color: none;
}


/*--- TOOLBAR AND NAVIGATION ---*/

section.toolbar {
  background-color: #3a3429;
  margin: 0px;
  height: 50px;
  color: #fdfdf7;
}

.toolbar ul {
  float: right;
  margin: 10px 0 0 0;
}

.toolbar li {
  display: inline-block;
  margin-left: 10px;
}

.button-small:link {
  cursor: pointer;
  font-family: "Droid-Sans", sans-serif;
  text-transform: uppercase;
  font-size: .75em;
  text-decoration: none;
  border-radius: 45px;
  padding: 7px 15px 5px 15px;
  background-color: #3A3429;
  border: 1px solid #f1eed7;
  color: #f1eed7;
}

.button-small:visited {
  cursor: pointer;
  font-family: "Droid-Sans", sans-serif;
  text-transform: uppercase;
  font-size: .75em;
  text-decoration: none;
  border-radius: 45px;
  padding: 7px 15px 5px 15px;
  background-color: #3A3429;
  border: 1px solid #f1eed7;
  color: #f1eed7;
}

.button-small:hover {
  cursor: pointer;
  font-family: "Droid-Sans", sans-serif;
  text-transform: uppercase;
  font-size: .75em;
  text-decoration: none;
  border-radius: 45px;
  padding: 7px 15px 5px 15px;
  background-color: #f1eed7;
  border: 1px solid #f1eed7;
  color: #3A3429;
}

nav.main {
  background-color: #544f45;
  height: 65px;
}

nav.main ul {
  float: right;
  vertical-align: center;
}

nav.main li {
  display: inline-block;
  margin-left: 30px;
}

nav.main li a:link {
  color: #f1eed7;
  font-size: .75em;
  text-decoration: none;
  font-family: "Droid-Sans", sans-serif;
  text-transform: uppercase;
  background: none;
}

nav.main  li a:visited {
  color: #f1eed7;
  font-size: .75em;
  text-decoration: none;
  font-family: "Droid-Sans", sans-serif;
  text-transform: uppercase;
  background: none;
}

nav.main  li a:hover {
  color: #f1eed7;
  font-size: .75em;
  text-decoration: none;
  font-family: "Droid-Sans", sans-serif;
  text-transform: uppercase;
  padding-bottom: 5px;
  border-bottom: 2px solid #f1eed7;
  background: none;
}

nav.main .logo {
  position: relative;
  top: -40px;
  background: none;
}

/*--- FOOTER STYLES ---*/

footer {
  border-top-width: 1px;
  border-top-style: ridge;
  border-top-color: #3A3429;
}

footer a:link {
  color: #f1eed7;
  text-decoration: underline;
  background-color: none;
}

footer a:visited {
  color: #f1eed7;
  text-decoration: underline;
  background-color: none;
}

footer a:hover {
  color: #6c7814;
  text-decoration: underline;
  background-color: none;
}

footer .ihp-footer {
  background-color: #544f45;
  padding-top: 50px;
  padding-bottom: 50px;
}

footer p {
  font-family: "Droid-Sans", sans-serif;
  font-weight: 400;
  color: #f1eed7;
  background-color: none;
  font-size: 1.5em;
}

footer .column1 {
  width: 50%;
  display: inline-block;
}

footer .column2 {
  width: 49%;
  display: inline-block;
  text-align: center;
}

footer .km-signoff {
  background-color: #3a3429;
  padding-top: 7px;
  padding-bottom: 7px;
}

footer .km-signoff p {
  font-family: "Droid-Sans", sans-serif;
  font-weight: lighter;
  font-weight: 400;
  color: #f1eed7;
  text-align: center;
  background-color: none;
}

